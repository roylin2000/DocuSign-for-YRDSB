<form class="eg" action="" method="post" data-busy="form">
<!-- form has functions while div is just a box -->
	</div>
		<div class = "header two"><text > Upcoming Submissions</text></div>
	</div>

	<button type="dashboard" class="btn sidebarOne">
		<span class="material-icons red600"> dashboard </span>
		Dashboard
	</button>

	<button type="submitted" class="btn sidebarTwo">
		<span class="material-icons red600"> schedule </span>
		Upcoming Submissions
	</button>

	<button type="submittedDoc" class="btn sidebarThree">
		<span class="material-icons red600"> cloud_done </span>
		Submitted Documents
	</button>

	<!-- hidden inputs so don't worry about them -->
	<input type="hidden" class="form-control" id="signerEmail" name="signerEmail"
          aria-describedby="emailHelp" placeholder="pat@example.com" required
          value="<%= locals.dsConfig.signerEmail %>">
	<input type="hidden" class="form-control" id="signerName" placeholder="Pat Johnson" name="signerName"
		value="<%= locals.dsConfig.signerName %>" required>
	<input type="hidden" name="_csrf" value="<%- csrfToken %>">

	

	<div class="form row layout">
		<div class="labelName"><text >Document Name</text></div>
		<div class="labelStatus"><text >Status</text></div>
		<div class="labelDeadline"><text>Days Until Expiration</text></div>
	  	<!-- <text class="label name">Name</text>
		<text class="label status">Status</text>
		<text class="label type">Type</text>
		<text class="label deadline">Deadline</text> -->
		<input type="hidden" id="envID" name="envID" value="">
		<ul class="forms list">
			<% forms?.forEach( doc => { %>
			<li class="form item">
                <script>
                    setEnvID = function(envID) {
                        var elem = document.getElementById("envID");
                        elem.value = envID;
                    }
                </script>

				<button onclick=setEnvID("<%=doc.envelopeId%>")>
					<div class="label name"><strong><%= doc.emailSubject%></strong></div>
					<div class="label status"> Incomplete </div>
					<div class="label deadline"><%= doc.expireAfter %> </div>
				</button>
			</li>
			<% }); %>
		</ul>
	</div>
  
</form>

