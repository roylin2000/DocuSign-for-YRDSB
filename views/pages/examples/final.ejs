		<input type="hidden" id="envID" name="envID" value="">
		<ul class="forms list">
			<% forms?.forEach( doc => { %>
			<li class="form item">
                <script>
                    setEnvID = function(envID) {
                        var elem = document.getElementById("envID");
                        elem.value = envID;
                    }
                </script>

				<button onclick=setEnvID("<%=doc.envelopeId%>")>
					<div class="label name"><strong><%= doc.emailSubject%></strong></div>
					<div class="label status"><%= doc.status %></div>
					<div class="label type"><%= doc.folders[0].folderId %></div>
					<div class="label deadline"><%= doc.expireDateTime %> </div>
				</button>
			</li>
			<% }); %>
		</ul>
	</div>
  
</form>

